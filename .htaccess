<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Stop rewriting if already in dist
    RewriteRule ^dist/ - [L]

    # Rewrite root to dist/index.html
    RewriteRule ^$ dist/index.html [L]

    # Rewrite everything else to dist/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ dist/$1 [L]
</IfModule>
